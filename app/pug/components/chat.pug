mixin chat(chat = {})
  - const { id, name, avatar, lastMessage } = chat
    a.card.hovered-card.mt-3.ps-3.text-decoration-none.border-0.rounded-0.shadow-sm(id=id, href="/chat.html")
      .d-flex.align-items-center
        +avatar(avatar, name)(width=50, height=50)
        .card-body.hovered-card-chat.p-4.overflow-hidden
          .d-flex.justify-content-between.align-items-baseline
            h5.card-title.h6.fw-bold=name
            small.text-muted=lastMessage.time
          p.card-text.text-truncate
            small.text-muted=lastMessage.message