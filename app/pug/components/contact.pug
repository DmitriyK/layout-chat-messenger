mixin contact(contact = {})
  - const { id, name, status, avatar } = contact
    a.card.hovered-card.mt-3.ps-3.text-reset.text-decoration-none.border-0.rounded-0.shadow-sm(id=id ,href="#")
      .d-flex.align-items-center
        +avatar(avatar, name)(width=50, height=50)
        .card-body.hovered-card-contact.p-4.overflow-hidden
          h5.card-title.h6.fw-bold.mb-0=name
          p.card-text
            small.text-muted=status
